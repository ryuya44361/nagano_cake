<main>
  <div class ="container">
    <div class = "row">
        <h5 class="col-auto mt-4 ml-5">配送先一覧・追加</h5>
    </div>

    <%= form_with model: @address,url: addresses_path do |f| %>

      <div class = "row mt-4">
        <p class = "col-3">郵便番号(ハイフンなし）</p>
        <%= f.text_field :postal_code ,placeholder: "0000000",class: "form-control col-3 mr-5"%>
      </div>

      <div class = "row mt-2">
        <p class = "col-3">住所</p>
        <%= f.text_field :address ,placeholder: "東京都渋谷区代々木神園町0-0",class: "form-control col-6 mr-5"%>
      </div>

      <div class = "row mt-2">
        <p class = "col-3">宛名</p>
        <%= f.text_field :name ,placeholder: "令和道子",class: "form-control col-3"%>

        <div class="col-6 text-right">
          <%= f.submit '新規投稿', class:"btn btn-success col-4" %>
        </div>
      </div>
    <%end%>




    <div class ="row mt-5">
    <div class="col-7">
        <table class="table table-bordered border-dark">
          <thead>
            <tr>
              <th class = "col-1 table-secondary">郵便番号</th>
              <th class = "col-3 table-secondary">住所</th>
              <th class = "col-2 table-secondary">宛名</th>
              <th class = "col-3 table-secondary"></th>
            </tr>
          </thead>

          <tbody>
          <% @addresses.each do |address| %>

            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success m-1"%>
                <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-sm btn-danger m-1", "data-confirm" => "本当に削除しますか？" %>
              </td>
            </tr>
          <%end%>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </main>