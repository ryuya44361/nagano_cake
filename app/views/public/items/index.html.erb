<main>
  <div class = "container mt-5">

    <div class ="row ">
      <div class="col-3">
        <table class="table table-inverse">
          <thead>
            <tr>
              <th>ジャンル検索</th>
            </tr>
          </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <%end%>
        </tbody>
        </table>
      </div>

        <div class = "col-9">
        <h3>商品一覧(全<%= @count %>件)</h3>

      <div class = "container">
        <div class = "row row-cols-4">
        <% @items.each do |item| %>
         <div class = "col-md-3">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_item_image(150,150) %>
          <%end%>
          <p>商品名 <span><%=item.name %></span></p>
          <p>￥ <span><%= item.price.floor.to_s(:delimited) %></span></p>
        </div>
      <%end%>
        </div>
      </div>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</main>