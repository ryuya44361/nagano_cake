<main>
  <div class ="container mt-3">
    <div class = "row">
      <h5>ログイン</h5>
    </div>

    <div class = "row">
      <h6 class = "mt-3 ml-3">会員の方はこちらからログイン</h6>
    </div>



        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div class = "row justify-content-center mt-2">
            <div class = "col-2"><%= f.label "メールアドレス"%></div>
            <div class = "col-5"><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %></div>
            </div>
          </div>

          <div class="field">
            <div class = "row justify-content-center mt-2">
              <div class = "col-2"><%= f.label "パスワード" %></div>
              <div class = "col-5"><%= f.password_field :password, autocomplete: "current-password",class: "form-control" %></div>
            </div>
          </div>

          <div class="actions">
            <div class = "row justify-content-center mt-2">
              <div class = "col-2"></div>
              <div class = "col-5"><%= f.submit "ログイン" %></div>
            </div>
          </div>
        <% end %>


    <div = "row">
      <h6 class = "mt-3 ml-3">会員登録がお済ではない方</h6> 
      <p class = "text-center"><%= render "public/shared/links" %> から新規登録を行ってください</p>
    </div>

  </div>
</main>