<main>
  <div class = "container">
    <div class = "row">
      <h5>注文履歴一覧</h5>
    </div>

    <div class = "row">
    <div class="col-8">
        <table class="table table-bordered border-dark">
          <thead>
            <tr>
              <th class = "col-2 table-secondary">注文日</th>
              <th class = "col-1 table-secondary">配送先</th>
              <th class = "col-1 table-secondary">注文商品</th>
              <th class = "col-1 table-secondary">支払金額</th>
              <th class = "col-1 table-secondary">ステータス</th>
              <th class = "col-1 table-secondary">注文詳細</th>
            </tr>
          </thead>

          <tbody>
          <% @orders.each do |order| %>

            <tr>
              <td><%= order.created_at%></td>
              <td>
                〒<%= order.postal_code %><br />
                <%= order.address %><br />
                <%= order.name %>
              </td>

              
              <td>
                <% @order_items.each do |order_item| %>
                  <%= order_item.item.name %> <br />
                <%end%>
              </td>
              
              <td><%= order.billing %></td>
              <td><%= Order.notes_statuses_i18n[order.notes_status] %></td>
              <td><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-success m-1"%></td>
            </tr>
          <%end%>
          </tbody>
        </table>
    </div>
  </div>
</main>