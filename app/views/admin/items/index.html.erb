<main>
  <div class ="container">
    <div class = "row">
        <h5 class="col-8 mt-4">商品一覧</h5>
      <div class = "col-2 mt-4">
          <%= link_to "+", new_admin_item_path, class: "btn btn-sm btn-success"%>
      </div>
    </div>

    <div class ="row justify-content-center">
      <div class="col-8 mt-3">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>
          <% @items.each do |item| %>

            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id)%></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active? %>
                  <span>販売中</span>
                <% else %>
                  <span>販売停止中</span>
                <% end %>
              </td>
            </tr>

          <%end%>

          </tbody>
        </table>
        <%= paginate @items %>
      </div>
    </div>
  </main>