<main>
  <div class = "container px-5">
    <div class = "row m-3">
      <h5>注文履歴一覧</h5>
    </div>
    
    <div class ="row">
    <div class="col-4 px-5 mt-5">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文数量</th>
              <th>注文ステータス</th>
            </tr>
          </thead>

          <tbody>
          <% @orders.each do |order| %>

            <tr>
              <td><%= link_to order.created_at, admin_order_path(order.id), class: "btn btn-sm btn-success"%></td>
              <td><%= order.customer.name %></td>
              <!--<td><%= order.customer.name %></td> ここに注文数量を表す記載　　-->
              <td><%= order.notes_status %></td>
            </tr>　

          <%end%>
          </tbody>
        </table>
        <%= paginate @items %>
        </div>
      </div>
  </div>
</main>