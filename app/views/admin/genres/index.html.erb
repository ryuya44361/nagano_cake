<main>
  <div class =
<h5 class="col-mt-3">ジャンル一覧・追加</h5>

  <%= form_with model: @genre,url: admin_genres_path do |f| %>
    <div class="form-group">
      <label for="genre_name">ジャンル名</label>
      <%= f.text_field :name ,class: "form-control genre_name"%>
    </div>

    <div class="form-group">
      <%= f.submit '新規投稿', class:"btn btn-success" %>
    </div>
  <%end%>

  <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
        <% @genres.each do |genre| %>

          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success"%></td>
          </tr>

        <%end%>
        </tbody>
      </table>
    </div>
  </main>